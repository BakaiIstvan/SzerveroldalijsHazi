<%- include header -%>
    <div class="container">
        <div class="row mt-3">
            <div class="col-2">
                <div class="card">
                    <div class="card-body">
                        Név:
                        <%= dog.name %>
                    </div>
                </div>
            </div>
            <div class="col-4 d-flex justify-content-center">
                <div class="card" style="float:inline-end;">
                    <div class="card-body">
                        Kor:
                        <%= dog.age %>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <div class="card" style="float: right;">
                    <div class="card-body">
                        Faj:
                        <%= dog.breed %>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>
                            Márka
                        </th>
                        <th>
                            Mennyiség
                        </th>
                        <th>
                            Energiatartalom
                        </th>
                        <th>
                            &nbsp;
                        </th>
                    </tr>
                    <tr>
                        <td>
                            Pedigree
                        </td>
                        <td>
                            100
                        </td>
                        <td>
                            25
                        </td>
                        <td style="width:30px;white-space: nowrap">
                            <a href="#" class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                </table>
                <br/>
                <a class="btn btn-primary" href="/dog/edit/<%= dog._id %>">Szerkesztés</a>
                <a href="/dogfood/<%= dog._id %>/new"><i class="fas fa-plus-circle fa-3x" style="float: right;"></i></a>
            </div>
        </div>
    </div>
    <%- include footer -%>